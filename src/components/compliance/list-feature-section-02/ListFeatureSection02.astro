---
import { convertToWebP } from "../../../utils/imageConvert";

const { title, items, image } = Astro.props;
---

<section class="pt-32 pb-16 lg:pb-32 bg-ds-blue-500 mt-[-8rem] md:mt-0">
  <div class="max-w-[1440px] mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center gap-16 xl:gap-[13rem] justify-between">
      {/* Content */}
      <div class="w-full lg:w-[55%]">
        <h2 class="ds-h3 mb-16 text-ds-white text-center lg:text-left">
          {title}
        </h2>

        {/* Numbered List */}
        <div class="space-y-8">
          {
            items.map((item) => (
              <div class="flex gap-3 lg:gap-6">
                <div class="flex-shrink-0 w-[0.75rem] h-[0.75rem] lg:w-4 lg:h-4 bg-ds-blue-900 mt-[5px] lg:mt-[10px] mr-0 lg:mr-2" />
                <div>
                  <h3 class="ds-h4 mb-2 text-ds-white">{item.title}</h3>
                  <p class="ds-p-2 text-ds-white">{item.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      {/* Image */}
      <div class="hidden lg:block w-full lg:w-[45%] flex justify-center">
        <img loading="lazy" 
          src={convertToWebP(image.filename)}
          alt={image.alt}
          class="max-h-[480px] w-auto"
        />
      </div>
    </div>
  </div>
</section>
