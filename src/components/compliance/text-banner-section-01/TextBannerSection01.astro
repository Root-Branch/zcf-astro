---
import { convertToWebP } from "../../../utils/imageConvert";

const { text, image, text_large_screen } = Astro.props;
---

<section class="sm:pt-16 pb-8 sm:pb-16">
  <div class="mx-auto px-8 sm:px-16">
    <div class="flex flex-col lg:flex-row items-center justify-between">
      {/* Text Content */}
      <div class="w-full lg:w-9/12 mb-8 lg:mb-0">
        <p class="ds-p-large text-ds-black text-center md:text-left block lg:hidden">
          {text}
        </p>
        <p class="ds-p-large text-ds-black text-center md:text-left hidden lg:block">
          {text_large_screen}
        </p>
      </div>

      {/* Illustration */}
      <div class="w-full lg:w-3/12 flex justify-center">
        <img
          src={convertToWebP(image.filename)}
          alt={image.alt}
          class="w-2/3 sm:w-1/2 lg:w-full h-auto"
        />
      </div>
    </div>
  </div>
</section>
