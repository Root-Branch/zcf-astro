---
import Button from "../../common/Button.astro";
import { convertToWebP } from "../../../utils/imageConvert";

const { title, background_image, cta_button } = Astro.props;
---

<section class="pb-32 relative overflow-hidden">
  <div class="flex flex-col lg:flex-row items-center">
    {/* Content */}
    <div class="w-full lg:w-9/12 z-20 lg:pl-32 lg:pt-32 flex flex-col justify-center">
      <h1 class="ds-h1 padded-multiline !mb-32">
        <span>
          {title}
        </span>
      </h1>
      <div>
        {
          cta_button?.[0] && (
            <Button
              text={cta_button[0].text}
              link={cta_button[0].link}
              style={cta_button[0].style}
              background_color={cta_button[0].background_color}
              text_color={cta_button[0].text_color}
            />
          )
        }
      </div>
    </div>

    {/* Image */}
    <div class="w-full lg:absolute lg:right-0 lg:top-0 lg:bottom-0">
      <img
        src={convertToWebP(background_image.filename)}
        alt={background_image.alt}
        class="w-full h-full object-contain lg:object-right"
      />
    </div>
  </div>
</section>

<style>
  .padded-multiline {
    line-height: 1.4;
    padding: 2px 0;
    margin: 20px auto;
  }
  .padded-multiline span {
    background-color: white;
    color: var(--ds-black);
    display: inline;
    padding: 0.45rem;
    box-decoration-break: clone;
    -webkit-box-decoration-break: clone;
  }
</style>
