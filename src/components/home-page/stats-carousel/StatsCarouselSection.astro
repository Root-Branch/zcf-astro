---
import { convertToWebP } from "../../../utils/imageConvert";
import SingleStat from "./SingleStat.astro";
import DoubleStat from "./DoubleStat.astro";
import Button from "../../common/Button.astro";
import TestimonialCarousel from "./TestimonialCarousel.astro";

const {
  heading_image,
  section_title,
  description,
  feature_image,
  stats,
  cta_button,
  testimonials,
} = Astro.props;
---

<section class="pt-10">
  <div class="mx-auto px-4 max-w-[1423px]">
    {/* Header */}
    <div class="mb-20 flex justify-center xl:justify-start px-8">
      <img
        src={convertToWebP(heading_image.filename)}
        alt={heading_image.alt || "Move to Zero"}
        class="mb-8 w-[35rem] h-auto"
      />
    </div>
  </div>

  <div class="relative mt-[300px] xl:mt-0">
    <div
      class="absolute inset-x-0 top-0 bg-ds-red-500"
      style="height: calc(100% + 600px);"
    >
    </div>

    <div class="relative flex flex-col px-4 xl:px-20">
      <div
        class="flex flex-col xl:flex-row-reverse max-w-[1432px] mx-auto pt-36 mb-10"
      >
        <div
          class="xl:w-[60%] -mt-[400px] pb-20 xl:pb-0 xl:translate-x-[100px] xl:-mt-[380px]"
        >
          <img
            src={convertToWebP(feature_image.filename)}
            alt={feature_image.alt || "Feature"}
            class="w-full h-[379px] xl:h-full object-cover"
          />
        </div>
        <div class="text-center xl:text-left xl:w-[40%]">
          <h2 class="ds-h2 xl:ds-h3 text-ds-white mb-12">{section_title}</h2>
          <p class="ds-p-1 text-ds-white mb-8">{description}</p>
        </div>
      </div>
      <div
        class="grid grid-cols-1 lg:grid-cols-3 gap-y-8 lg:gap-y-0 gap-x-20 mx-auto max-w-[1432px] mb-20 px-8 xl:px-0 place-items-center"
      >
        {
          stats?.map((stat) =>
            stat.component === "single_stat" ? (
              <SingleStat {...stat} />
            ) : (
              <DoubleStat {...stat} class="col-span-2" />
            )
          )
        }
        <div class="mt-8 lg:mt-20 relative w-fit">
          <Button
            text={cta_button[0].text}
            link={cta_button[0].link}
            style={cta_button[0].style}
            text_color={cta_button[0].text_color}
            background_color={cta_button[0].background_color}
          />
        </div>
      </div>
    </div>
  </div>

  <div class="relative z-10">
    <TestimonialCarousel testimonials={testimonials} />
  </div>
</section>
