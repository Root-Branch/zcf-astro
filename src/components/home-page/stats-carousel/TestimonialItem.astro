---
import { convertToWebP } from "../../../utils/imageConvert";
import quoteIcon from "../../../assets/quote-icon.png";
import { Image } from "astro:assets";

const {
  quote,
  author_name,
  author_title,
  author_company,
  company_logo,
  image,
} = Astro.props;
---

<div class="flex flex-col lg:flex-row mx-10 lg:mx-32 lg:min-h-[750px]">
  <div class="bg-black py-24 lg:py-[188px] px-12 lg:px-[100px] lg:w-[55%] text-center lg:text-left">
    <blockquote class="ds-p-1 lg:ds-p-large !leading-[1.25] text-ds-white mb-8 relative">
      {quote}
      <Image src={quoteIcon} alt="Quote Icon" class="w-10 h-10 mb-4 absolute top-0 left-0 translate-x-[-40px] translate-y-[-30px] hidden lg:block" />
    </blockquote>

    <div class="flex flex-col lg:flex-row items-center">
      <div>
        <p class="ds-p-3 lg:ds-p-1 text-ds-white font-bold">{author_name}</p>
        <p class="ds-p-3 lg:ds-p-1 text-ds-white">{author_title}, {author_company}</p>
      </div>

      <img
        src={convertToWebP(company_logo.filename)}
        alt={company_logo.alt || `${author_company} logo`}
        class="h-[90px] w-auto lg:ml-4"
      />
    </div>
  </div>

  <div class="lg:w-[45%]">
    <img
      src={convertToWebP(image.filename)}
      alt={image.alt || `${author_name} testimonial`}
      class="w-full h-[30vh] lg:h-full object-cover"
    />
  </div>
</div>
