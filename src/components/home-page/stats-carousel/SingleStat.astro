---
import { convertToWebP } from "../../../utils/imageConvert";

const { icon, number, description } = Astro.props;
---

<div class="flex flex-row items-center justify-center text-ds-white h-[157px]">
  <img
    src={convertToWebP(icon.filename)}
    alt={icon.alt || "Stat Icon"}
    class="h-2/3 xl:h-full mr-4"
  />
  <div class="flex flex-col max-w-[249px] w-[45%] lg:w-fit">
    <p class="number-size ds-h1 lg:ds-h2 !leading-1">
      {number}
    </p>
    <p class="ds-p-2 lg:ds-p-1 !leading-1">{description}</p>
  </div>
</div>