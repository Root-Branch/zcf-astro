---
import { renderRichText } from "@storyblok/astro";
const { number, background_color, step_label, step_heading, step_description } =
  Astro.props;

const textClass =
  background_color === "ds-white" ? "text-ds-blue-900" : "text-ds-white";

const renderedHeading = renderRichText(step_heading);
---

<div class={`bg-${background_color} flex flex-row p-12`}>
  <div class="flex justify-center mr-8">
    <span class="inline-block ds-number-large text-ds-red-500">{number}</span>
  </div>

  <div class="flex flex-col">
    <div class="mb-4">
      <span class={`ds-p-1 !font-semibold ${textClass}`}>{step_label}</span>
    </div>

    <h3
      class={`ds-highlight-4 ${textClass} mb-6`}
      set:html={renderedHeading}
    />

    <p class={`ds-p-2 ${textClass}`}>
      {step_description}
    </p>
  </div>
</div>
