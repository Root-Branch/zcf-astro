---
import { Image } from "astro:assets";
import { convertToWebP } from "../../../utils/imageConvert";

interface Props {
  heading: string;
  logos: {
    filename: string;
    alt: string;
    id: number;
  }[];
}

const { heading, logos, padding_top, padding_bottom, mobile_padding_top, mobile_padding_bottom } = Astro.props;

const padding_top_class = padding_top ? `lg:pt-${padding_top}` : "lg:pt-10";
const padding_bottom_class = padding_bottom ? `lg:pb-${padding_bottom}` : "lg:pb-20";
const mobile_padding_top_class = mobile_padding_top ? `pt-${mobile_padding_top}` : "pt-10";
const mobile_padding_bottom_class = mobile_padding_bottom ? `pb-${mobile_padding_bottom}` : "pb-20";
---

<section class={`${padding_top_class} ${padding_bottom_class} ${mobile_padding_top_class} ${mobile_padding_bottom_class}`}>
  <div class="max-w-[1432px] mx-auto px-4">
    <h2 class="ds-h2 md:ds-h4 text-center mb-12">{heading}</h2>

    <div class="flex flex-wrap items-center justify-center gap-12">
      {
        logos?.map((logo) => (
          <div class="flex items-center justify-center">
            <img
              src={convertToWebP(logo.filename)}
              alt={logo.alt || "Partner logo"}
              class="w-full h-[50px] object-contain"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
