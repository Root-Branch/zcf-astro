---
import { Image } from "astro:assets";
import { convertToWebP } from "../../../utils/imageConvert";
import { renderRichText } from "@storyblok/astro";

const { heading, heading_font, logos } = Astro.props;
---

<section class="py-20">
  <div class="max-w-[1432px] mx-auto px-4">
    <div class={`text-center mb-12 ${heading_font ? `${heading_font}` : "ds-h4"}`} set:html={renderRichText(heading)}></div>

    <div class="flex flex-wrap items-center justify-center gap-12">
      {
        logos?.map((logo) => (
          <div class="flex items-center justify-center">
            <img
              src={convertToWebP(logo.filename)}
              alt={logo.alt || "Partner logo"}
              class="w-full h-[50px] object-contain"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
