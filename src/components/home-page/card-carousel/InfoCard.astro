---
import { convertToWebP } from "../../../utils/imageConvert";

const { image, title, description, link } = Astro.props;
---

<div
  class="info-card mx-10 lg:mx-0 bg-ds-blue-500 max-w-[400px] min-h-[239px] px-8 py-10 text-white h-full flex flex-col"
>
  <div class="flex items-start">
    <div class="w-1/5 mr-4">
      <img 
        src={convertToWebP(image.filename)} 
        alt={image.alt || title} 
        class="h-[51px] w-auto"
      />
    </div>
    
    <div class="w-4/5 flex flex-col h-full justify-center">
      <h3 class="ds-p-1 md:ds-h4 mb-6">{title}</h3>
      
      <div
        class="ds-p-2 mb-8 flex flex-grow items-start"
        set:html={description}
      />
      
      <a href={link} class="ds-p-2 !underline">
        Find out more
      </a>
    </div>
  </div>
</div>