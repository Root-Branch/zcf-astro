---
import Button from "../../common/Button.astro";
import { renderRichText } from "@storyblok/astro";

const { title, description, cta_button, index, card_number } = Astro.props;

const renderedDescription = renderRichText(description);
---

<div
  class={`calculator-card mx-10 lg:mx-0 bg-ds-blue-500 max-w-[445px] min-h-[306px] py-16 lg:py-8 px-8 text-center h-full flex flex-col`}
>
  <h3 class="ds-h3 md:ds-h4 text-ds-white mb-6">{title}</h3>
  <div
    class="ds-p-2 md:ds-p-1 text-ds-white mb-8 flex flex-grow items-center justify-center"
    set:html={renderedDescription}
  />
  {
    cta_button?.[0] && (
      <Button
        text={cta_button[0].text}
        link={cta_button[0].link}
        style={cta_button[0].style}
        text_color={cta_button[0].text_color}
        background_color={cta_button[0].background_color}
      />
    )
  }
</div>
