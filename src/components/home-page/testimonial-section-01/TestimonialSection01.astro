---
import { convertToWebP } from "../../../utils/imageConvert";
import { Image } from "astro:assets";

const {
  quote,
  author_name,
  author_title,
  author_company,
  company_logo,
  image,
  is_full_width,
  quote_icon
} = Astro.props;

const is_full_width_class = is_full_width ? "" : "mx-10 lg:mx-32 lg:min-h-[750px]";
---

<div class={`flex flex-col lg:flex-row ${is_full_width_class}`}>
  <div class="bg-black py-24 lg:py-[188px] px-12 lg:px-[100px] lg:w-[55%] text-center lg:text-left">
    <blockquote class="ds-p-1 lg:ds-p-large !leading-[1.25] text-ds-white mb-8 relative">
      {quote}
      <img src={convertToWebP(quote_icon.filename)} alt="Quote Icon" class="w-10 h-10 mb-4 absolute top-0 left-0 translate-x-[-40px] translate-y-[-30px] hidden lg:block" />
    </blockquote>

    <div class="flex flex-col lg:flex-row items-center">
      <div>
        <p class="ds-p-3 lg:ds-p-2 text-ds-white !font-bold">{author_name}</p>
        <p class="ds-p-3 lg:ds-p-2 text-ds-white">{author_title}, {author_company}</p>
      </div>

      <img
        src={convertToWebP(company_logo.filename)}
        alt={company_logo.alt || `${author_company} logo`}
        class="h-[90px] w-auto lg:ml-4"
      />
    </div>
  </div>

  <div class="lg:w-[45%]">
    <img
      src={convertToWebP(image.filename)}
      alt={image.alt || `${author_name} testimonial`}
      class="w-full h-[30vh] lg:h-full max-h-[797px] object-cover"
    />
  </div>
</div>
