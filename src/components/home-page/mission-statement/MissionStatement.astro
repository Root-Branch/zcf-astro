---
import { renderRichText } from "@storyblok/astro";
import { convertToWebP } from "../../../utils/imageConvert";

const { heading, description, image } = Astro.props;

const renderedHeading = renderRichText(heading);
const renderedDescription = renderRichText(description);
---

<section class="bg-white mt-20 md:mt-40">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row-reverse items-center gap-12">
      <div class="w-full text-center lg:text-left lg:w-1/2">
        <h2 class="ds-h2 mb-8" set:html={renderedHeading} />
        <div class="ds-p-2" set:html={renderedDescription} />
      </div>
      <div class="w-2/3 lg:w-full max-w-[627px]">
        <img
          src={convertToWebP(image.filename)}
          alt={image.alt || "Zero is Everything"}
          class="w-full h-auto"
        />
      </div>
    </div>
  </div>
</section>
