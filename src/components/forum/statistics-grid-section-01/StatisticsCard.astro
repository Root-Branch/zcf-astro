---
import { convertToWebP } from "../../../utils/imageConvert";
import { renderRichText } from "@storyblok/astro";

const { card } = Astro.props;
---

<div
  class="bg-ds-blue-900 py-4 px-2 lg:py-8 lg:px-4 min-h-[152px] lg:min-h-[356px] max-w-[289px] flex flex-col justify-around items-center"
>
  <img
    src={convertToWebP(card.image.filename)}
    alt={card.image.alt}
    class="w-auto h-[40px] md:h-[60px] lg:h-[80px] mb-2 lg:mb-0"
  />
  <div class="flex flex-col items-center">
    <h2
      class="ds-h3 text-ds-white font-bold text-center"
    >
      {card.stats_number}
    </h2>
    <div
      class="ds-p-2 lg:ds-p-1 text-ds-white render-rich-text text-center"
      set:html={renderRichText(card.stats_description)}
    />
  </div>
  {
    card.second_stats_number && card.second_stats_description && (
      <div class="flex flex-col items-center">
        <h2 class="ds-h3 text-ds-white font-bold text-center">
          {card.second_stats_number}
        </h2>
        <div
          class="ds-p-2 lg:ds-p-1 text-ds-white render-rich-text text-center"
          set:html={renderRichText(card.second_stats_description)}
        />
      </div>
    )
  }
</div>

<style>
  .ds-p-stats_description {
    font-size: 11px;
    font-family: "Source Sans 3", sans-serif;
    line-height: 1.2;
    font-weight: 300;
  }

  @media screen(lg) {
    .ds-p-stats_description {
      font-family: "Source Sans 3", sans-serif;
      font-size: 24px;
      line-height: 30px;
      font-weight: 350;
    }
  }
</style>
