---
import Button from "../../common/Button.astro";
import { convertToWebP } from "../../../utils/imageConvert";

const { title, description, image, cta_button } = Astro.props;
---

<section class="relative overflow-hidden">
  <div class="container mx-auto pb-[7rem]">
    <div class="flex flex-col lg:flex-row items-center">
      {/* Content */}
      <div class="w-full lg:w-[60%] mt-8 lg:mt-16 text-left lg:pr-8 px-6 lg:px-0">
        <h2 class="ds-h1 !font-bold mb-6 uppercase">{title}</h2>
        <p class="ds-p-2 md:ds-p-1 mb-6 lg:mb-24 w-[40%] lg:w-full">
          {description}
        </p>

        {
          cta_button?.[0] && (
            <Button
              text={cta_button[0].text}
              link={cta_button[0].link}
              style={cta_button[0].style}
              background_color={cta_button[0].background_color}
              text_color={cta_button[0].text_color}
            />
          )
        }
      </div>

      {/* Image */}
      <div
        class="w-full lg:w-[40%] absolute -right-[11.75rem] top-[11rem] md:top-[21rem] h-[100%] bottom-0 lg:right-0 lg:top-0 lg:bottom-[-20%] lg:h-[120%]"
      >
        <img loading="lazy" 
          src={convertToWebP(image.filename)}
          alt={image.alt}
          class="w-full h-full object-contain object-top"
        />
      </div>
    </div>
  </div>
</section>
