---
import Button from "../../common/Button.astro";
import { convertToWebP } from "../../../utils/imageConvert";

const { title, description, image, cta_button } = Astro.props;
---

<section class="relative overflow-hidden">
  <div class="container mx-auto pb-32">
    <div class="flex flex-col lg:flex-row items-center">
      {/* Content */}
      <div class="w-full lg:w-[60%] mt-16 text-center lg:text-left lg:pr-8">
        <h2 class="ds-h1 !font-bold mb-4 uppercase">{title}</h2>
        <p class="ds-p-1 md:ds-p-1 mb-36">{description}</p>

        {
          cta_button?.[0] && (
            <Button
              text={cta_button[0].text}
              link={cta_button[0].link}
              style={cta_button[0].style}
              background_color={cta_button[0].background_color}
              text_color={cta_button[0].text_color}
            />
          )
        }
      </div>

      {/* Image */}
      <div class="w-full lg:w-[40%] lg:absolute lg:right-0 lg:top-0 lg:bottom-[-20%] lg:h-[120%]">
        <img
          src={convertToWebP(image.filename)}
          alt={image.alt}
          class="w-full h-full object-contain object-top"
        />
      </div>
    </div>
  </div>
</section>
